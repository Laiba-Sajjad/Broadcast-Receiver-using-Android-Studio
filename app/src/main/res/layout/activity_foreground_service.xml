<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForegroundService"
    android:background="#87CEEB">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="51dp"
        android:layout_y="44dp"
        android:text="Foreground Service"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/start_services"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:layout_x="28dp"
        android:layout_y="550dp"
        android:text="Start Service" />

    <Button
        android:id="@+id/foreground_back"
        android:layout_width="170dp"
        android:layout_height="56dp"
        android:layout_x="221dp"
        android:layout_y="550dp"
        android:text="Back" />

    <TextView
        android:id="@+id/progressbar_txt"
        android:layout_width="277dp"
        android:layout_height="47dp"
        android:layout_x="8dp"
        android:layout_y="263dp"
        android:text="" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="213dp"
        android:max="100"
        android:progress="50"
        android:layout_marginTop="100dp"
        android:background="#FFFAFA"/>


</AbsoluteLayout>